<Window x:Class="Contacts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="Edit Contact" Margin="22,0,0,54"/>
        <TextBox x:Name="textBox1" Height="30" VerticalAlignment="Top" Margin="35,50,26,0" />
        <GroupBox Grid.Column="1" Header="Read Contact" Margin="0,0,23,54"/>
        <Button x:Name="LoadButton" Grid.Column="1" Content="Load" HorizontalAlignment="Left" Margin="284,385,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.496,-0.22" Height="26" Width="93"/>
        <Button x:Name="SaveButton" Grid.Column="1" Content="Save" HorizontalAlignment="Left" Margin="188,385,0,0" VerticalAlignment="Top" Height="26" Width="91" IsCancel="True"/>
    </Grid>
</Window>
